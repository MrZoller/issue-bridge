root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.py]
indent_size = 4

[*.md]
# Allow trailing whitespace for Markdown hard line breaks.
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2
